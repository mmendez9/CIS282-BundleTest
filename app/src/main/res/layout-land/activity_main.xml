<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.dtcc.emailman.bundletest.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/etLength"
        android:layout_alignStart="@+id/etLength"
        android:layout_marginTop="10dp"
        android:id="@+id/etWidth"
        android:singleLine="false" />

    <TextView
        android:text="@string/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/stArea"
        android:layout_alignStart="@+id/etWidth"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:id="@+id/tvArea" />

    <TextView
        android:text="@string/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stPerimeter"
        android:layout_alignStart="@+id/tvArea"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:id="@+id/tvPerimeter" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etLength"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="101dp"
        android:singleLine="false" />

    <Button
        android:text="@string/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btCalculate"
        android:onClick="onCalcClick"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/stWidth" />

    <TextView
        android:text="@string/perimeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/stPerimeter"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/stArea"
        android:layout_toStartOf="@+id/tvPerimeter"
        android:layout_marginEnd="60dp" />

    <TextView
        android:text="@string/area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/stArea"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/etWidth"
        android:layout_alignStart="@+id/stPerimeter" />

    <TextView
        android:text="@string/enter_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stWidth"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_alignTop="@+id/etWidth"
        android:layout_alignStart="@+id/stArea" />

    <TextView
        android:id="@+id/stLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_length"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_alignBaseline="@+id/etLength"
        android:layout_alignBottom="@+id/etLength"
        android:layout_alignStart="@+id/stWidth" />
</RelativeLayout>
