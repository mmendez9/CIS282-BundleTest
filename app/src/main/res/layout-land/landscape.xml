<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="edu.dtcc.emailman.bundletest.MainActivity">

        <TextView
            android:text="@string/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/stArea"
            android:layout_alignStart="@+id/etWidth"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:id="@+id/tvArea" />

        <TextView
            android:text="@string/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/stPerimeter"
            android:layout_alignStart="@+id/tvArea"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:id="@+id/tvPerimeter" />

        <Button
            android:text="@string/calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:id="@+id/btCalculate"
            android:onClick="onCalcClick"
            android:layout_below="@+id/tvPerimeter"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="@string/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stArea"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/stWidth"
            android:layout_marginStart="25dp" />

        <TextView
            android:text="@string/perimeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:id="@+id/stPerimeter"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:layout_below="@+id/stArea"
            android:layout_alignStart="@+id/stWidth" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etLength"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/stLength"
            android:layout_marginStart="53dp"
            android:singleLine="false" />

        <TextView
            android:text="@string/enter_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stWidth"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:layout_alignBottom="@+id/etWidth"
            android:layout_alignStart="@+id/stLength" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etWidth"
            android:layout_marginBottom="18dp"
            android:layout_above="@+id/tvArea"
            android:layout_alignStart="@+id/etLength" />

        <TextView
            android:id="@+id/stLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_length"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:layout_alignBottom="@+id/etLength"
            android:layout_toStartOf="@+id/btCalculate" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_length"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:text="@string/enter_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView5"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/stLength"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView6"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/stWidth"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/perimeter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView7"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/stArea"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/editText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/etLength"
        android:layout_alignStart="@+id/etLength"
        android:layout_marginTop="10dp"
        android:id="@+id/editText2" />

    <TextView
        android:text="@string/zero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/stArea"
        android:layout_alignStart="@+id/etWidth"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:id="@+id/textView8" />

    <TextView
        android:text="@string/zero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stPerimeter"
        android:layout_alignStart="@+id/tvArea"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:id="@+id/textView9" />

    <Button
        android:text="@string/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPerimeter"
        android:layout_toEndOf="@+id/tvPerimeter"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:id="@+id/button"
        android:onClick="onCalcClick" />
</LinearLayout>